{
    "name": "Kaimak (Beta)",
    "description": "Metamask API proxy for Kaikas-supported Dapps",
    "version": "0.1",
    "manifest_version": 2,
    "permissions": [
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "run_at": "document_start",
            "js": [
                "kaimak.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "caver.min.js"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "128": "icon128.png"
    }
}