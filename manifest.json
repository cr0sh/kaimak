{
    "name": "Kaimak (Beta)",
    "description": "Metamask API proxy for Kaikas-supported Dapps",
    "version": "0.1",
    "manifest_version": 3,
    "permissions": [
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "run_at": "document_start",
            "js": [
                "kaimak.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "inject.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}